{
    "build": {
        "beforeDevCommand": "yarn dev:vite",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": false
    },
    "package": {
        "productName": "kurumi",
        "version": "0.0.0"
    },
    "tauri": {
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "dev.avrg",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "kurumi",
                "width": 1200,
                "height": 800
            }
        ]
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}
